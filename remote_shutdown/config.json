{
  "name": "Windows RPC Shutdown",
  "version": "1.0",
  "slug": "remote_shutdown",
  "description": "Remotely shutdown windows with additional parameters",
  "url": "https://github.com/iganeshk/hassio-addons",
  "startup": "services",
  "boot": "auto",
  "stdin": true,
  "host_network": true,
  "options": {
    "computers": [
      {
        "alias": "demo-pc",
        "address": "192.168.1.1",
        "credentials": "user%password",
        "time": "5",
        "message": "Goodbye!"
      }
    ]
  },
  "schema": {
    "computers": [
      {
        "alias": "match(^[\\w-]*$)",
        "address": "str",
        "credentials": "match(^[^%]*(?:%[^%]*)?$)",
        "time": "str",
        "message": "str"
      }
    ]
  },
   "image": "homeassistant/{arch}-addon-remote_shutdown"
}